{% extends 'base.html.twig' %}

{% block title %}Devoir index{% endblock %}

{% block body %}
    <h1>Devoir index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devoir in devoirs %}
            <tr>
                <td>{{ devoir.id }}</td>
                <td>{{ devoir.type }}</td>
                <td>{{ devoir.description }}</td>
                <td>
                    <a href="{{ path('app_devoir_show', {'id': devoir.id}) }}">show</a>
                    <a href="{{ path('app_devoir_edit', {'id': devoir.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_devoir_new') }}">Create new</a>
{% endblock %}
