{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<!-- Title Start -->
<section class="scroll-section" id="title">
  <div class="page-title-container">
    <h1 class="mb-0 pb-0 display-4">Categorie</h1>
    <nav class="breadcrumb-container d-inline-block" aria-label="breadcrumb">
      <ul class="breadcrumb pt-0">
        <li class="breadcrumb-item"><a href="Dashboards.Default.html">Home</a></li>
        <li class="breadcrumb-item"><a href="Interface.html">Interface</a></li>
        <li class="breadcrumb-item"><a href="Interface.Components.html">Components</a></li>

      </ul>
    </nav>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">

      <!-- Button trigger modal -->
      <button type="button" class="btn btn-icon btn-icon-only btn-outline-secondary mb-1" data-bs-toggle="modal"
        data-bs-target="#exampleModal"title="Ajouter">
        <i data-acorn-icon="plus"></i>
      </button>
    </div>
  </div>
</section>
<!-- Title End -->


<section class="scroll-section" id="stripedRows">

  <div class="card mb-5">
    <div class="card-body">

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Categorie </th>
            <th scope="col">Discription</th>
            <th scope="col">Action</th>

          </tr>
        </thead>
        <tbody>
          {%for categorieparent in categorieparent %}
          <tr>
            <th>{{categorieparent.id}}</th>
            <td>{{categorieparent.nom}}</td>
            <td>{{categorieparent.discription}}</td>
            <td>
              <a href="{{path('categorieparent_delete',{id:categorieparent.id})}}"
                class="btn btn-icon btn-icon-only btn-outline-secondary mb-1"
                onclick="if(!confirm('Are you sure ?')) { return false; }" title="Suprimer">
                <i class="bi bi-trash"></i></a>

              <!-- Button trigger modal -->
              <button type="button" class="btn btn-icon btn-icon-only btn-outline-secondary mb-1" data-bs-toggle="modal"
                data-bs-target="#exampleModal-{{categorieparent.id}}" title="Visualiser">
                <i class="bi bi-eye"></i>
              </button>
              <!-- Modal show -->
              <div class="modal fade" id="exampleModal-{{categorieparent.id}}" tabindex="-1"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">Id
                        </label>
                        <p>{{categorieparent.nom}}</p>
                        <p></p>
                      </div>
                      <div class="col-md-6">
                        <label for="inputPassword4" class="form-label">Cin
                        </label>
                        <p>{{categorieparent.discription}}</p>
                      </div>
                    </div>

                  </div>
                </div>
              </div>


              <button onclick="modalUpdate({{categorieparent.id }})"
                class="btn btn-icon btn-icon-only btn-outline-secondary mb-1" data-bs-toggle="modal"
                data-bs-target="#edit" title="Modifier">
                <i class="bi bi-pencil-square"></i>
              </button>


            </td>
          </tr>

          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>





<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.min.js"
  integrity="sha512-bPh3uwgU5qEMipS/VOmRqynnMXGGSRv+72H/N260MQeXZIK4PG48401Bsby9Nq5P5fz7hy5UGNmC/W1Z51h2GQ=="
  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  function modalUpdate(id) {
    axios.get("getInfoCategorieParent/" + id).then(function (res) {
        let data = res.data
        $("#id").val(data.id)
        $("#nom").val(data.nom)
        $("#discription").val(data.discription)

      })
      .catch(function (error) {
        console.log("errr")
        //console.log(error.request.message)
      })
  }

  function doUpdate() {
    let verified
    $("#verified").val() == "true" ? verified = true : verified = false
    let form = {
      "id": $("#id").val(),
      "nom": $("#nom").val(),
      "discription": $("#discription").val(),

    }
    axios.post("codeEditCategorieParent", form).then(function (res) {
        alert("success")
      })
      .catch(function (error) {
        alert("error")
      })
  }
</script>
<!-- modal edit -->


<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>


      <div class="modal-body">
        <input type="hidden" id="id">
        nom:<input type="text" id="nom" class="form-control"><br>
        discription:<input type="text" id="discription" class="form-control"><br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="doUpdate()">enregistrer</button>
      </div>


    </div>
  </div>
</div>

<!-- Modal add -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>{{ form_start(form ) }}
      <div class="modal-body">

        {{ form_row(form.nom,{'attr':{'class':'form-control'}}) }}

        {{ form_row(form.discription,{'attr':{'class':'form-control'}}) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      {{ form_end(form ) }}
    </div>
  </div>
</div>
</div>
{% endblock %}