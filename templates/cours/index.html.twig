<!-- Title End -->


            <div class="col">
              <!-- List Items Start -->
            
    <div class="row g-3 row-cols-1 row-cols-md-2 row-cols-xl-3 row-cols-xxl-4 mb-5">
             
      {% for cour in cours %}
      <div class="col">
        <div class="card h-100">
          <img src="{{ asset('/uploads/'~ cour.image) }}" class="card-img-top sh-22" alt="card image" />


          <div class="card-body">
            <h5 class="heading mb-0"><a class="body-link">{{ cour.nom }}</a></h5>
          </div>
          <div class="card-footer border-0 pt-0">
            <div class="mb-2">

              <div class="text-muted d-inline-block text-small align-text-top">{{ cour.description }}</div></div>
          <a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
  <a  href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
          </div>
        </div>

      </div>
      {% endfor %}

    </div>
                    
