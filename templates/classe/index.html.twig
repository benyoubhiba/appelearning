                <div class="row g-0 h-auto sh-lg-12">
                  <div class="col-12 col-lg-auto h-100">
             <img src="{{ asset('/uploads/'~ classe.image) }}"  alt="course" class="card-img card-img-horizontal-lg sh-18 sw-lg-16 h-lg-100" />
